{
	"compilerOptions": {
		"outDir": "../dist/mcp-server",
		"rootDir": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022"],
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
