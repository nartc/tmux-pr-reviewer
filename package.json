{
	"name": "pr-reviewer",
	"version": "2.0.0",
	"description": "Local PR review tool that sends AI-processed feedback to MCP-compatible coding agents",
	"author": "Chau Tran <nartc7789@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nartc/pr-reviewer.git"
	},
	"keywords": [
		"pr-review",
		"code-review",
		"mcp",
		"model-context-protocol",
		"ai",
		"local",
		"git",
		"diff",
		"claude-code",
		"cline"
	],
	"type": "module",
	"scripts": {
		"build": "react-router build && pnpm build:mcp",
		"build:mcp": "tsc -p mcp-server/tsconfig.json",
		"dev": "node scripts/dev.js",
		"dev:app": "cross-env NODE_ENV=development node server.js",
		"mcp": "node dist/mcp-server/index.js",
		"setup:mcp": "node scripts/setup-mcp.js",
		"start": "node server.js",
		"typecheck": "react-router typegen && tsc -b"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.14",
		"@ai-sdk/google": "^3.0.9",
		"@ai-sdk/openai": "^3.0.11",
		"@effect/platform": "^0.94.1",
		"@effect/platform-node": "^0.104.0",
		"@modelcontextprotocol/sdk": "^1.0.4",
		"@pierre/diffs": "^1.0.5",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@radix-ui/themes": "^3.2.1",
		"@react-router/express": "7.12.0",
		"@react-router/node": "7.12.0",
		"@tanstack/react-virtual": "^3.13.18",
		"ai": "^6.0.37",
		"better-sqlite3": "^12.6.0",
		"compression": "^1.8.1",
		"effect": "^3.19.14",
		"express": "^5.1.0",
		"isbot": "^5.1.31",
		"morgan": "^1.10.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-icons": "^5.5.0",
		"react-router": "7.12.0",
		"remix-utils": "^9.0.0",
		"simple-git": "^3.30.0",
		"sonner": "^2.0.7"
	},
	"devDependencies": {
		"@react-router/dev": "7.12.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/better-sqlite3": "^7.6.13",
		"@types/compression": "^1.8.1",
		"@types/express": "^5.0.3",
		"@types/express-serve-static-core": "^5.0.7",
		"@types/morgan": "^1.9.10",
		"@types/node": "^22",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"concurrently": "^9.1.2",
		"cross-env": "^10.0.0",
		"prettier": "^3.8.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4",
		"zod": "^4.3.5"
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"tabWidth": 4,
		"plugins": [
			"prettier-plugin-organize-imports"
		]
	},
	"packageManager": "pnpm@10.28.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3",
			"esbuild"
		]
	}
}
